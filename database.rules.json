{
  "rules": {
    ".read": false,
    ".write": false,
    "roomsByCode": {
      "$code": {
        ".read": "auth != null",
        ".write": "auth != null",
        ".validate": "newData.isString()"
      }
    },
    "rooms": {
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null && ((!data.exists() && newData.child('createdBy').val() === auth.uid) || data.child('members').child(auth.uid).exists() || (!data.child('members').child(auth.uid).exists() && newData.child('members').child(auth.uid).exists()))"
      }
    },
    "results": {
      "$roomId": {
        ".read": "auth != null && root.child('rooms').child($roomId).child('members').child(auth.uid).exists()",
        ".write": false
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    }
  }
}
